<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home_screen">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_main_icon_round"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="9dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="50px"
        android:text="100 Национални Туристически Обекта"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.031" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="50px"
        android:text="Намерете обект близо до вас или изберете от списъка"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.216" />

    <Button
        android:id="@+id/button_all"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:padding="50px"
        android:text="Всички обекти"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="226dp" />

    <Button
        android:id="@+id/button_area"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:padding="50px"
        android:text="Обекти по области"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="315dp" />

    <Button
        android:id="@+id/button_nextToMe"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:padding="50px"
        android:text="Обекти близо до мен"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="402dp" />


</android.support.constraint.ConstraintLayout>